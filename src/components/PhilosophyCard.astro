---
import { site } from '@/data/site';
---

<div class="glass-card p-6 md:p-8 col-span-full lg:col-span-2 flex flex-col gap-5 relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-accent/5 via-transparent to-purple-500/5 pointer-events-none"></div>

  <h3 class="text-text-muted text-xs font-semibold uppercase tracking-wider relative z-10">
    {site.philosophy.headline}
  </h3>

  <blockquote class="relative z-10">
    <p class="text-lg md:text-xl text-text-primary leading-relaxed italic" style="font-family: var(--font-serif);">
      "{site.philosophy.quote}"
    </p>
  </blockquote>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-2 relative z-10">
    {site.philosophy.principles.map((principle) => (
      <div class="flex flex-col gap-1 p-3 rounded-xl bg-surface-card/50 border border-border-glass">
        <span class="text-accent font-semibold text-sm">{principle.title}</span>
        <span class="text-text-secondary text-xs leading-relaxed">{principle.description}</span>
      </div>
    ))}
  </div>
</div>
