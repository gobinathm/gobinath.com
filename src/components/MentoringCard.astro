---
import { site, sections } from '@/data/site';

const colSpan = sections.testimonials ? 'lg:col-span-2' : 'lg:col-span-full';
---

<div class={`glass-card p-6 md:p-8 col-span-full ${colSpan} flex flex-col gap-5 relative overflow-hidden`}
  <div class="absolute inset-0 bg-gradient-to-br from-purple-500/5 via-transparent to-accent/5 pointer-events-none"></div>

  <h3 class="text-text-muted text-xs font-semibold uppercase tracking-wider relative z-10">
    {site.mentoring.headline}
  </h3>

  <p class="text-text-primary text-lg italic relative z-10" style="font-family: var(--font-serif);">
    "{site.mentoring.quote}"
  </p>

  <div class="flex flex-col gap-3 relative z-10">
    {site.mentoring.activities.map((activity) => (
      <div class="flex flex-col gap-1 p-4 rounded-xl bg-surface-card/50 border border-border-glass">
        <div class="flex items-center justify-between gap-2 flex-wrap">
          <h4 class="text-text-primary font-semibold">{activity.title}</h4>
          <div class="flex items-center gap-2">
            <span class="text-xs px-2 py-0.5 rounded-full bg-accent/10 text-accent border border-accent/20">
              {activity.duration}
            </span>
            <span class="text-text-muted text-xs">{activity.period}</span>
          </div>
        </div>
        <p class="text-text-secondary text-sm leading-relaxed">{activity.description}</p>
      </div>
    ))}
  </div>
</div>
