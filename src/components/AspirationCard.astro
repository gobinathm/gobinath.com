---
import { site } from '@/data/site';
---

<div class="glass-card p-6 md:p-8 col-span-full lg:col-span-2 flex flex-col relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-r from-accent/5 via-purple-500/5 to-cyan-500/5 pointer-events-none"></div>

  <h3 class="text-text-muted text-xs font-semibold uppercase tracking-wider relative z-10 mb-4">
    {site.aspiration.headline}
  </h3>

  <div class="flex-grow flex flex-col justify-center gap-4 relative z-10">
    <p class="text-text-primary text-lg leading-relaxed">
      {site.aspiration.description}
    </p>

    <div class="flex items-center gap-3">
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-accent/10 text-accent border border-accent/20 text-sm">
        <span class="w-2 h-2 rounded-full bg-accent animate-pulse"></span>
        {site.aspiration.cta}
      </span>
    </div>
  </div>

  <a
    href={site.social.linkedin}
    target="_blank"
    rel="noopener noreferrer"
    class="mt-4 inline-flex items-center gap-2 text-sm text-accent hover:text-accent/80 transition-colors relative z-10"
  >
    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
    Let's Connect on LinkedIn
  </a>
</div>
