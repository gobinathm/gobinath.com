---
const stats = [
  { value: 22, label: 'Years Experience' },
  { value: 14, label: 'Roles Held' },
  { value: 11, label: 'Certifications' },
];
---

<div class="glass-card p-6 flex flex-col justify-center gap-4">
  <h3 class="text-text-muted text-xs font-semibold uppercase tracking-wider">Stats</h3>
  <div class="flex flex-col gap-3">
    {stats.map(s => (
      <div class="flex items-baseline gap-2">
        <span data-count={s.value} class="text-2xl font-bold gradient-text">{s.value}+</span>
        <span class="text-text-secondary text-sm">{s.label}</span>
      </div>
    ))}
  </div>
</div>
