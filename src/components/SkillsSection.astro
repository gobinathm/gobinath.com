---
import { skillCategories } from '@/data/skills';

/** Map level to size classes â€” higher level = larger pill */
function sizeClasses(level: number): string {
  if (level >= 90) return 'text-sm px-4 py-2 font-semibold';
  if (level >= 80) return 'text-sm px-3.5 py-1.5 font-medium';
  if (level >= 70) return 'text-xs px-3 py-1.5 font-medium';
  if (level >= 60) return 'text-xs px-2.5 py-1 font-normal';
  return 'text-[11px] px-2 py-1 font-normal opacity-80';
}
---

{skillCategories.map((cat) => (
  <div class="glass-card p-6 flex flex-col gap-4">
    <div class="flex items-center gap-2">
      <span class="text-lg">{cat.icon}</span>
      <h3 class="text-text-muted text-xs font-semibold uppercase tracking-wider">{cat.name}</h3>
    </div>
    <div class="flex flex-wrap gap-2">
      {cat.skills.map(skill => (
        <span class:list={[
          'inline-flex items-center justify-center rounded-xl bg-accent/10 text-accent border border-accent/20 hover:bg-accent/20 hover:scale-105 transition-all duration-200 cursor-default',
          sizeClasses(skill.level),
        ]}>
          {skill.name}
        </span>
      ))}
    </div>
  </div>
))}
